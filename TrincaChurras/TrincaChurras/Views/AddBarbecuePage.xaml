<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TrincaChurras.Views.AddBarbecuePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid BackgroundColor="#F9F9F9">
            <Image
                BackgroundColor="#FFD935"
                Source="bbq_pattern.png"
                VerticalOptions="StartAndExpand" />
            <Grid Margin="0,80" VerticalOptions="Start">

                <Button
                    Margin="0,7,10,0"
                    BackgroundColor="Transparent"
                    Command="{Binding BackButtonCommand}"
                    FontFamily="FontAwesome"
                    FontSize="Large"
                    HorizontalOptions="Start"
                    Text="&#xf104;"
                    TextColor="Black"
                    VerticalOptions="CenterAndExpand">
                    <Button.Triggers>
                        <DataTrigger
                            Binding="{Binding IsBusy}"
                            TargetType="Button"
                            Value="True">
                            <Setter Property="IsEnabled" Value="False" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>

                <Label
                    FontFamily="RalewayBold"
                    HorizontalOptions="CenterAndExpand"
                    Text="Adicionar de Churras"
                    TextColor="Black"
                    VerticalTextAlignment="Center">
                    <Label.FontSize>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="iOS" Value="20" />
                            <On Platform="Android" Value="25" />
                        </OnPlatform>
                    </Label.FontSize>
                </Label>

                <ActivityIndicator
                    x:Name="activityIndicator"
                    Margin="0,0,20,0"
                    HorizontalOptions="EndAndExpand"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}" />
            </Grid>
            <pancake:PancakeView Margin="10,170,10,100">
                <pancake:PancakeView.Shadow>
                    <pancake:DropShadow
                        BlurRadius="8"
                        Opacity=".2"
                        Offset="0,0"
                        Color="Black" />
                </pancake:PancakeView.Shadow>
                <Grid
                    Padding="20"
                    BackgroundColor="White"
                    ColumnDefinitions="3*,Auto,Auto"
                    RowDefinitions="Auto,Auto,Auto"
                    VerticalOptions="FillAndExpand">

                    <DatePicker
                        Date="{Binding Date}"
                        FontFamily="RalewayBold"
                        FontSize="Medium"
                        HorizontalOptions="Start"
                        MinimumDate="01/01/2022"
                        TextColor="Black" />
                    <Entry
                        Grid.Row="1"
                        FontAttributes="Italic"
                        FontFamily="RalewayBold"
                        FontSize="Large"
                        HorizontalOptions="Start"
                        Placeholder="Titulo"
                        Text="{Binding Title}"
                        TextColor="Black"
                        WidthRequest="230" />

                    <StackLayout Grid.Column="1" Orientation="Horizontal">
                        <Image HeightRequest="15" Source="icon_people.png" />
                        <Label
                            FontFamily="RalewayRegular"
                            FontSize="Medium"
                            Text="{Binding TotalParticipants}"
                            TextColor="Black" />
                    </StackLayout>

                    <StackLayout
                        Grid.Row="1"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Image HeightRequest="15" Source="icon_money.png" />
                        <Entry
                            Grid.Row="1"
                            Grid.Column="1"
                            FontFamily="RalewayRegular"
                            FontSize="Medium"
                            Keyboard="Numeric"
                            Placeholder="Valor"
                            Text="{Binding ValuePerPeson}"
                            TextColor="Black"
                            VerticalTextAlignment="Center" />
                    </StackLayout>

                    <Button
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        BackgroundColor="White"
                        Command="{Binding AddPariticipantsCommand}"
                        HorizontalOptions="CenterAndExpand"
                        Text="Adicionar participantes"
                        TextColor="Black" />

                    <CollectionView
                        x:Name="CVParticipants"
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Margin="0,20,0,0"
                        ItemsSource="{Binding ParticipantsList}"
                        SelectionChanged="collectionParticipants_SelectionChanged"
                        SelectionChangedCommand="{Binding SelectedItemCommand}"
                        SelectionChangedCommandParameter="{x:Reference CVParticipants}"
                        SelectionMode="Single"
                        VerticalScrollBarVisibility="Never">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout BackgroundColor="White">
                                    <Grid
                                        BackgroundColor="White"
                                        ColumnDefinitions="3*,Auto"
                                        HeightRequest="50">
                                        <StackLayout
                                            BackgroundColor="White"
                                            Orientation="Horizontal"
                                            Spacing="0">
                                            <CheckBox
                                                x:Name="check"
                                                IsChecked="{Binding Confirmed}"
                                                IsEnabled="False"
                                                WidthRequest="32"
                                                Color="#FFD836" />
                                            <Label
                                                FontFamily="RalewayRegular"
                                                Text="{Binding Name}"
                                                TextColor="Black"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>
                                        <Grid Grid.Column="1">
                                            <Label
                                                FontFamily="RalewayBold"
                                                TextColor="Black"
                                                VerticalTextAlignment="Center">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="R$" />
                                                        <Span Text="{Binding Value_paid, StringFormat='{0:F2}'}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <BoxView
                                                x:Name="boxBlack"
                                                HeightRequest="1"
                                                IsVisible="False"
                                                VerticalOptions="Center"
                                                Color="Black">
                                                <BoxView.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding Source={x:Reference check}, Path=IsChecked}"
                                                        TargetType="BoxView"
                                                        Value="True">
                                                        <Setter Property="IsVisible" Value="True" />
                                                    </DataTrigger>
                                                </BoxView.Triggers>
                                            </BoxView>
                                        </Grid>
                                    </Grid>
                                    <BoxView
                                        HeightRequest="1"
                                        HorizontalOptions="FillAndExpand"
                                        Opacity=".5"
                                        Color="#E5C231" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </pancake:PancakeView>
            <Image
                Margin="0,0,0,30"
                Source="trinca.png"
                VerticalOptions="End" />

            <BoxView
                x:Name="Backdrop"
                InputTransparent="True"
                Opacity="0"
                Color="#4B000000">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </BoxView.GestureRecognizers>
            </BoxView>

            <!--  Bottom Drawer  -->
            <Frame
                x:Name="FrameDrawer"
                BackgroundColor="White"
                CornerRadius="20"
                HasShadow="False"
                HeightRequest="300"
                TranslationY="360"
                VerticalOptions="End"
                WidthRequest="300">
                <Frame.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated" />
                </Frame.GestureRecognizers>

                <StackLayout Padding="5">
                    <BoxView
                        Margin="0,0,0,5"
                        BackgroundColor="LightGray"
                        CornerRadius="2"
                        HeightRequest="3"
                        HorizontalOptions="Center" />
                    <Entry
                        x:Name="entryDrawer"
                        FontAttributes="Italic"
                        FontFamily="RalewayRegular"
                        Placeholder="Name"
                        Text="{Binding Name}"
                        TextColor="Black" />

                    <StackLayout BackgroundColor="White" Orientation="Horizontal">
                        <CheckBox
                            x:Name="checkboxDrawer"
                            IsChecked="{Binding IsPresent}"
                            WidthRequest="32"
                            Color="#FFD836" />
                        <Label
                            FontFamily="RalewayRegular"
                            Text="Confirmado"
                            TextColor="Black"
                            VerticalTextAlignment="Center" />

                        <Entry
                            x:Name="valueDrawer"
                            FontAttributes="Italic"
                            FontFamily="RalewayRegular"
                            HorizontalOptions="EndAndExpand"
                            Keyboard="Numeric"
                            Placeholder="Valor Pago"
                            Text="{Binding PaidValue}"
                            TextColor="Black"
                            WidthRequest="150" />
                    </StackLayout>

                    <Button
                        Margin="0,0,0,70"
                        BackgroundColor="Black"
                        Clicked="Button_Clicked"
                        Command="{Binding SaveParticipantCommand}"
                        CornerRadius="18"
                        FontFamily="RalewayBold"
                        Text="Salvar"
                        TextColor="White"
                        VerticalOptions="EndAndExpand" />

                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
